@page "/"

@code {

    private bool freezeTabs = false;

    private void StartLoad()
    {
        freezeTabs = true;
    }

    private void EndLoad()
    {
        freezeTabs = false;
    }

}
<h1>Hello, world!</h1>

This is the maps demo.


<SfTab>
<TabItems>
    <TabItem Disabled="freezeTabs">
        <ChildContent>
            <TabHeader Text="A map"></TabHeader>
        </ChildContent>
                <ContentTemplate>
                    <SfMaps>
                        <MapsLayers>
                            @* load shape data *@
                            <MapsLayer ShapeData='new {dataOptions= "https://cdn.syncfusion.com/maps/map-data/world-map.json"}' TValue="string">
                            </MapsLayer>
                        </MapsLayers>
                        <MapsEvents OnLoad="StartLoad" Loaded="EndLoad"></MapsEvents>
                    </SfMaps>
                </ContentTemplate>
    </TabItem>
    <TabItem Disabled="freezeTabs">
        <ChildContent>
            <TabHeader Text="Another map"></TabHeader>
        </ChildContent>
        <ContentTemplate>
            <SfMaps>
                <MapsLayers>
                    @* load shape data *@
                    <MapsLayer ShapeData='new {dataOptions= "https://cdn.syncfusion.com/maps/map-data/world-map.json"}' TValue="string">
                    </MapsLayer>
                </MapsLayers>
                <MapsEvents OnLoad="StartLoad" Loaded="EndLoad"></MapsEvents>
            </SfMaps>
        </ContentTemplate>
    </TabItem>
    <TabItem Disabled="freezeTabs">
        <ChildContent>
            <TabHeader Text="Map"></TabHeader>
        </ChildContent>
        <ContentTemplate>
            <SfMaps>
                <MapsLayers>
                    @* load shape data *@
                    <MapsLayer ShapeData='new {dataOptions= "https://cdn.syncfusion.com/maps/map-data/world-map.json"}' TValue="string">
                    </MapsLayer>
                </MapsLayers>
                <MapsEvents OnLoad="StartLoad" Loaded="EndLoad"></MapsEvents>
            </SfMaps>
        </ContentTemplate>
    </TabItem>
</TabItems>
</SfTab>
